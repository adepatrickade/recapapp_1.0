<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_acceuil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hp.madose.Acceuil"
    tools:showIn="@layout/app_bar_acceuil">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/livrason"
        android:id="@+id/imageB"
        android:background="@drawable/bgr"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="158dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" android:contentDescription="@string/todo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/iceentre"
        android:id="@+id/imageB1"

        android:background="@drawable/bgr"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_alignTop="@+id/imageB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:contentDescription="@string/todo" />

    <TextView
        android:text="@string/sortie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageB"
        android:layout_alignLeft="@+id/imageB"
        android:layout_alignStart="@+id/imageB"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="@string/demande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/textView7"
        android:textSize="15sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/demand"
        android:layout_marginTop="14dp"
        android:id="@+id/imageButton"
        android:background="@drawable/demand"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/imageB1"
        android:layout_alignStart="@+id/imageB1" android:contentDescription="@string/todo" />

    <TextView
        android:text="@string/entree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stock"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignLeft="@+id/imageB"
        android:layout_alignStart="@+id/imageB"
        android:id="@+id/imageButton2"
        android:background="@drawable/stock" android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_below="@+id/imageButton2"
        android:text="@string/mouvements" />

</RelativeLayout>
